<Application
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:sty="clr-namespace:FluentAvalonia.Styling;assembly=FluentAvalonia"
    xmlns:ui="using:FluentAvalonia.UI.Controls"
    x:Class="MediaFetcherAvalonia.App"
    xmlns:fa="clr-namespace:FluentAvalonia.UI.Controls;assembly=FluentAvalonia"
    >


    <Application.Styles>
        <!-- Load FluentAvalonia theme first -->
        <sty:FluentAvaloniaTheme PreferSystemTheme="True" />
  
        <!-- Override TextBlock and SymbolIcon styles when Mica is active -->
        <Style Selector=":is(Window)[ActualTransparencyLevel=Mica] TextBlock">
            <Setter Property="Effect" Value="{x:Null}" />
        </Style>
        <Style Selector=":is(Window)[ActualTransparencyLevel=Mica] fa|SymbolIcon">
            <Setter Property="Effect" Value="{x:Null}" />
        </Style>
    </Application.Styles>

    <!-- Set application icon for taskbar -->
    <Application.RequestedThemeVariant>Default</Application.RequestedThemeVariant>
    <Application.Resources>
        <FontFamily x:Key="InterFont">/Assets/Inter-Regular.ttf#Inter</FontFamily>
    </Application.Resources>
</Application>