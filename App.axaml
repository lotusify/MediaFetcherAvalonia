<Application
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:sty="clr-namespace:FluentAvalonia.Styling;assembly=FluentAvalonia"
    xmlns:ui="using:FluentAvalonia.UI.Controls"
    x:Class="MediaFetcherAvalonia.App"
    xmlns:fa="clr-namespace:FluentAvalonia.UI.Controls;assembly=FluentAvalonia"
    >


    <Application.Styles>
        <!-- Load FluentAvalonia theme first -->
        <sty:FluentAvaloniaTheme PreferSystemTheme="True" />
    </Application.Styles>

    <!-- Set application icon for taskbar -->
    <Application.RequestedThemeVariant>Default</Application.RequestedThemeVariant>
    <Application.Resources>
        <FontFamily x:Key="JetbrainMonoRegular">/Assets/JetBrainsMono.ttf#JetbrainMonoRegular</FontFamily>
    </Application.Resources>
</Application>